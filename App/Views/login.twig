

{% block body %}
        <form action="{{ path('connexion') }}" method="post">
                
                <div class="input-group">
                    
                    <span class="input-group-addon"></span>
                        <input id="username" name="_username" type="text" class="form-control" placeholder="{% trans %}username{% endtrans %}">
                </div>
                    <br/>
                <div class="input-group">
                    <span class="input-group-addon"></span>
                    <input id="password" type="password" name="_password" class="form-control" placeholder="{% trans %}password{% endtrans %}">
                </div>
                    <br/>
                <div class="row">
                    <div class="col-md-6"><a href="{{ path('user.signup') }}">{% trans %}signup{% endtrans %}</a></div>
                    <div class="col-md-6">
                        <input type="submit" class="btn btn-info btn-block" value="{% trans %}connection{% endtrans %}" />
                    </div>
                </div>

        </form>
        <div class="col-md-4"></div>
        {% if error %}
            <div class="error">{{ error }}</div>
        {% endif %}

{% endblock %}