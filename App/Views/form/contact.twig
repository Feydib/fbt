{% extends layout %}
{% block contactClass %}active{% endblock %}
{% block bodyClass %}register{% endblock %}
{% block body %}
<div id="content">
<div class="col-md-4"></div>
<div class="col-md-4">
    <form  action="{{ path('index.docontact') }}" method="post">

      <h1>{% trans  %}contact{% endtrans %}</h1>
      {{ form_errors(form)}}

      <br>
      <div class="input-group">
          <span class="input-group-addon"></span>
      {{ form_widget(form.email) }}
      </div>
      <br>
      <div class="input-group">
          <span class="input-group-addon"></span>
      {{ form_widget(form.lastname) }}
      </div>
      <br>
      <div class="input-group">
          <span class="input-group-addon"></span>
      {{ form_widget(form.firstname) }}
      </div>
      <br>
      <div class="input-group">
          <span class="input-group-addon"></span>
          {{ form_widget(form.comments) }}
      </div>
    
      <div class="col-md-3"></div>
        <div class="col-md-6">
            <input class="btn btn-info btn-block" type="submit" name="submit">
        </div>
      {{ form_rest(form)}}
    </form>
</div>
</div>
{% endblock %}